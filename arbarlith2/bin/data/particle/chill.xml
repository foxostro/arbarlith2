<max>128</max>

<material>
	<name>Smoke</name>
	<image>data/particle/smoke.png</image>
	<glow>true</glow>
</material>

<template>
	<name>Smoke</name>
	<material>Smoke</material>

	<size>
		<point>
			<x>0.0</x>
			<y>0.3</y>
		</point>
		<point>
			<x>1.0</x>
			<y>1.0</y>
		</point>
	</size>

	<alpha>
		<point>
			<x>0.0</x>
			<y>0.05</y>
		</point>
		
		<point>
			<x>1.0</x>
			<y>0.0</y>
		</point>
	</alpha>

	<blue>
		<point>
			<x>0.0</x>
			<y>1.0</y>
		</point>
	</blue>

	<green>
		<point>
			<x>0.0</x>
			<y>1.0</y>
		</point>
	</green>

	<red>
		<point>
			<x>0.0</x>
			<y>1.0</y>
		</point>
	</red>

	<acceleration>&VEC(0.0, 0.1, 0.0)</acceleration>
	<initialRadialVelocity>0.5</initialRadialVelocity>
</template>

<emitter>
	<name>Smoke</name>
	<template>Smoke</template>

	<falloff>0.1</falloff>

	<length>1000.0</length>

	<looping>TRUE</looping>
	<cycles>-1</cycles>
	
	<sizemul>
		<point>
			<x>0.0</x>
			<y>0.4</y>
		</point>
	</sizemul>

	<rate>
		<point>
			<x>0.0</x>
			<y>1</y>
		</point>
	</rate>

	<lifespan>		
		<point>
			<x>1.0</x>
			<y>400.0</y>
		</point>
	</lifespan>
</emitter>











<material>
	<name>Snow</name>
	<image>data/particle/snowflake.png</image>
	<glow>true</glow>
</material>

<template>
	<name>Snow</name>
	<material>Snow</material>

	<size>
		<point>
			<x>0.0</x>
			<y>0.4</y>
		</point>

		<point>
			<x>0.5</x>
			<y>0.5</y>
		</point>

		<point>
			<x>1.0</x>
			<y>1.0</y>
		</point>
	</size>

	<alpha>
		<point>
			<x>0.0</x>
			<y>0.5</y>
		</point>
		
		<point>
			<x>0.5</x>
			<y>0.1</y>
		</point>
		
		<point>
			<x>1.0</x>
			<y>0.0</y>
		</point>
	</alpha>

	<blue>
		<point>
			<x>0.0</x>
			<y>1.0</y>
		</point>
	</blue>

	<green>
		<point>
			<x>0.0</x>
			<y>1.0</y>
		</point>
	</green>

	<red>
		<point>
			<x>0.0</x>
			<y>1.0</y>
		</point>
	</red>

	<acceleration>&VEC(0.0, 6.0, 0.0)</acceleration>
	<initialRadialVelocity>1</initialRadialVelocity>
</template>

<emitter>
	<name>Snowing</name>
	<template>Snow</template>

	<falloff>0.10</falloff>

	<length>1000.0</length>

	<looping>TRUE</looping>
	<cycles>-1</cycles>
	
	<sizemul>
		<point>
			<x>0.0</x>
			<y>0.6</y>
		</point>
	</sizemul>

	<rate>
		<point>
			<x>0.0</x>
			<y>2</y>
		</point>
	</rate>

	<lifespan>
		<point>
			<x>0.0</x>
			<y>800.0</y>
		</point>
	</lifespan>
</emitter>
